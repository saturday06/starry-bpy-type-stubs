{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch",
                "pin",
                "pinDigest",
                "digest",
                "lockFileMaintenance",
                "rollback",
                "bump",
                "replacement"
            ],
            "automerge": true
        }
    ]
}
