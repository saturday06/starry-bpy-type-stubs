{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":disableDependencyDashboard"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "automerge": true
        },
        {
            "matchPackageNames": [
                "bpy",
                "python"
            ],
            "rangeStrategy": "in-range-only",
            "automerge": true
        }
    ]
}
